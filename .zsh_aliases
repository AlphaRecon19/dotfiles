# Run applications with docker replacements

yarn () {
    tty=
    tty -s && tty=--tty
    docker run \
        $tty \
        --interactive \
        --rm \
        --user $(id -u):$(id -g) \
        --volume /tmp:/tmp:rw \
        --volume /home/chris:/home/chris:rw \
        --volume $(pwd):/$(pwd) \
        -w /$(pwd) \
        local/yarn:latest $@
}

gulp () {
    tty=
    tty -s && tty=--tty
    docker run \
        $tty \
        --interactive \
        --rm \
        --user $(id -u):$(id -g) \
        --volume /tmp:/tmp:rw \
        --volume /home/chris:/home/chris:rw \
        --volume $(pwd):/$(pwd) \
        -w /$(pwd) \
        local/yarn:latest gulp $@
}

php () {
    tty=
    tty -s && tty=--tty
    docker run \
        $tty \
        --rm \
        --net=host \
        -it \
        --user $(id -u):$(id -g) \
        --volume /usr/local/bin/symfony:/usr/local/bin/symfony:ro \
        --volume /home/chris:/home/chris:ro \
        --volume $(pwd):$(pwd) \
        --workdir $(pwd) \
        php:latest php "$@"
}

